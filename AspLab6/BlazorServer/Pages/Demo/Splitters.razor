@using Microsoft.FluentUI.AspNetCore.Components
@using BlazorServer.Components
@using BlazorServer.Services

@inject IColorService colorService

@page "/demo/splitters"


<div style="margin-left: auto; margin-right: auto; width:800px;">

    <FluentSplitter Orientation="Orientation.Vertical" Style="height:800px">
        <Panel1>
            <FluentSplitter Style="height:100%">
                <Panel1>
                    <div style="@style1" />
                </Panel1>
                <Panel2>
                    <div style="@style2" />
                </Panel2>
            </FluentSplitter>
        </Panel1>
        <Panel2>
            <div style="@style3" />
        </Panel2>
    </FluentSplitter>
</div>

@code 
{
    string style1;
    string style2;
    string style3;

    protected override void OnInitialized()
    {
        style1 = $"background-color:{@colorService.Color1};width:100%; height:100%;";
        style2 = $"background-color:{@colorService.Color2};width:100%; height:100%;";
        style3 = $"background-color:{@colorService.Color3};width:100%; height:100%;";
    }
}
